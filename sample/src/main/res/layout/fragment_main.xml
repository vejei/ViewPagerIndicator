<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    tools:context=".MainFragment">

    <Button
        android:id="@+id/button_main_circle_indicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/main_circle_indicator_button_text"/>

    <Button
        android:id="@+id/button_main_rect_indicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/main_rect_indicator_button_text"/>

    <Button
        android:id="@+id/button_main_rect_indicator_rtl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/main_rect_indicator_rtl_button_text"/>

</LinearLayout>